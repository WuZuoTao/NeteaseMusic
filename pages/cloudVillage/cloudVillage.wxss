/* 视频内容区域 */
.videoContent{
    display: flex;
    flex-wrap:wrap;
    margin-left: 20rpx;
}
.videoContent .videoItem{
    position: relative;
    display: flex;
    flex-direction:column;
    justify-content: space-between;
    height: 360rpx;
    background: #ffffff;
    margin: 0 20rpx 20rpx 0;
    width: 47%;
}
.videoItem .itemImg{
    width: 100%;
    height: 200rpx;
}
.videoItem .itemText{
    margin: 0 20rpx;
    overflow: hidden;
    display:-webkit-box;
    text-overflow: ellipsis;  /* 超出部分省略号代替*/
    -webkit-box-orient: vertical;  /*设置对其模式*/
    -webkit-line-clamp: 2;  /*设置最多行数*/
}
.videoItem .itemName{
    height: 60rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 10rpx;
    font-size: 28rpx;
    color: #cccccc;
}
.itemName .nameImage{
    width: 50rpx;
    height: 50rpx;
    margin-right: 10rpx;
    border-radius: 50%;
}
.itemName .name{
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;  /*设置对其模式*/
    -webkit-line-clamp: 1;  /*设置最多行数*/
}
.icon{
    font-size: 28rpx;
    color: #cccccc;
}
