/* wxss */
.indexContent{
    width: 750rpx;
}
/* 头部区域配置 */
.top{
    background-image: linear-gradient(180deg, rgb(223, 221, 221), #fafafa,#ffffff)
}
.indexSearch{
    height: 60rpx;
    display: flex;
    padding: 20rpx 20rpx;
}
.indexSearch .search{
    flex:1;
    background: #ffffff;
    border: 1px solid #999;
    border-radius: 50rpx;
    margin: 0 30rpx;
    text-align: center;
}
.indexSearch .search text{
    color: rgb(177, 172, 172);
    font-size: 28rpx;
    margin-top: 10rpx;
    line-height: 60rpx;
}
.indexSearch .search .text{
    margin-left: 8rpx;
}
.indexSearch .iconfont{
    line-height: 60rpx;
    font-size: 36rpx;
}
/* 轮播图配置 */
.top .indexSwiper{
    margin:20rpx 20rpx 0 20rpx; 
}
.top .indexSwiper swiper-item{
    border-radius: 30rpx;
}
.top .indexSwiper swiper-item image{
    width: 100%;
    height: 100%;
}
/* 横向导航栏 */
.indexScroll{
    background: #ffffff;
    margin-top: 30rpx ;
}
.indexScroll scroll-view{
    display: flex;
    flex-direction:row;
    height: 160rpx;
    border-bottom: 1px solid rgb(235, 233, 233);
}
.indexScroll scroll-view .scrollItem{
    display: flex;
    flex-direction: column;
    align-items: center;
    white-space: nowrap;
    margin-left:20rpx;
    padding-right: 20rpx;
}
.indexScroll scroll-view .scrollItem .iconfont{
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 52rpx;
    background: rgb(255, 244, 244);
    color: rgb(240, 49, 49);
    border-radius: 50%;
    margin-bottom: 10rpx;
}
.indexScroll scroll-view .scrollItem .text{
    font-size: 24rpx;
}