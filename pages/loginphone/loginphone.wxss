/* 弹出菜单 */
.pullDown{
    border-radius:30rpx 30rpx 0 0 ;
    width: 100%;
    height: 98%;
    background: #ffffff;
    position: absolute;
    bottom: 0;
    z-index: 99;
}
.pullDown .pullDownTop{
    margin: 20rpx 20rpx 0 20rpx;
    font-size: 36rpx;
    text-align: center;
}
.pullDown .pullDownTop .topText{
    float: left;
    font-size: 42rpx;
}
.pullDownBottom {
    padding-left:20rpx;
    display: flex;
}
.pullDownBottom .scrollItem .itemText{
    display: inline-block;
    padding: 20rpx 0;
    font-size: 30rpx;
}
.itemView{
    display: flex;
    justify-content: space-between;
}
.itemView text{
    padding: 20rpx 0;
    border-bottom: 0.5rpx solid #ddd9d9;
    font-size: 28rpx;
}
.viewFlex{
    flex: 1;
}
.itemView .viewText{
    color:#adadad;
}
.itemRight{
    font-size: 20rpx;
    text-align: center;
    margin: auto 0;
    margin-left: 30rpx;
    margin-right: 5rpx;
}